{
  "name": "@sigma/hevy",
  "version": "0.1.2",
  "description": "hevy agent",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm run build:agent",
    "build:prod": "ncc build src/index.ts -o dist",
    "dev": "ncc build src/index.ts -o dist --watch",
    "lint": "eslint --ext js,ts,tsx src/ --fix",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "rimraf": "^3.0.2",
    "tslib": "^2.8.1",
    "typescript": "^4.7.2",
    "tsup": "^8.0.1",
    "ncc": "0.3.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@tegonhq/agent-sdk": "workspace:*",
    "axios": "^1.7.9",
    "openai": "^4.0.0"
  }
}